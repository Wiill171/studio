/**
 * @file Firestore Security Rules for Avis Explorer
 * @core_philosophy This ruleset enforces a strict user-ownership model for user profiles and their associated bird sightings.
 * Data for individual bird species is readable by anyone.
 * @data_structure All data is nested under either /users/{userId} or /birds/{birdId}.
 * @key_security_decisions
 * - User listing is disallowed to protect privacy.
 * - All write operations to user-owned data are restricted to the authenticated user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Secure the user profile document.
     * @path /users/{userId}
     * @allow (create, get, update, delete) - Authenticated user can manage their own profile.
     * @deny (list) - No one can list all users.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list: if false;
    }

    /**
     * @description Secure the bird sighting subcollection under a user's profile.
     * @path /users/{userId}/sightings/{sightingId}
     * @allow (create, get, list, update, delete) - Authenticated user can manage their own sighting records.
     */
    match /users/{userId}/sightings/{sightingId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Allow public read access to bird species data.
     * @path /birds/{birdId}
     * @allow (get, list) - Any user can read bird species data.
     * @deny (create, update, delete) - No user can create, update, or delete bird species data (admin-only).
     */
    match /birds/{birdId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
